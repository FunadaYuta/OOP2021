<Window x:Class="NumberGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:NumberGame="clr-namespace:NumberGame"
        xmlns:Space="clr-namespace:NumberGame"
        xmlns:local="clr-namespace:NumberGame"
        mc:Ignorable="d"
        x:Name="MainWind"
        Title="MainWindow" Height="520" Width="410" Loaded="Window_Loaded">
    <StackPanel>
        <Grid x:Name="grid"/>
        <TextBlock x:Name="textDisp" Height="50" FontSize="30"
                   TextWrapping="Wrap"/>
        <TextBlock x:Name = "uxClock" TextWrapping = "Wrap" Text = "00:00:00"  FontFamily = "Harlow Solid Italic" FontSize = "50" Height = "59" Width = "194" />
    </StackPanel>
</Window>
